generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  tags        String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
